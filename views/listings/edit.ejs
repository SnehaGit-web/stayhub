<% layout('layouts/boilerplate') %>


    <div class="row">
        <div class="col-8 offset-2 mt-3">
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
                <h3>Edit Listing</h3>
                <div class="mb-3">
                <label class="form-label" for="title">Title:</label><br>
                <input type="text" id="title" name="listing[title]" class="form-control" value="<%= listing.title %>" required><br><br>
                </div>
                <div class="mb-3">
                <label class="form-label" for="description">Description:</label><br>
                <textarea id="description" name="listing[description]" class="form-control" required><%= listing.description %></textarea><br><br>
                </div>
                <div class="mb-3">
                <label class="form-label" for="image">Enter Image URL:</label><br>
                <input type="text" id="image" name="listing[image][url]" class="form-control" value="<%= listing.image.url %>"><br><br>
                </div>
                <div class="row">
                    <div class="mb-3 col-4">
                    <label class="form-label" for="price">Price (USD):</label><br>
                    <input type="number" id="price" name="listing[price]" class="form-control" value="<%= listing.price %>" required><br><br>
                    </div>
                    <div class="mb-3 col-8">
                    <label class="form-label" for="country">Country:</label><br>
                    <input type="text" id="country" name="listing[country]" class="form-control" value="<%= listing.country %>" required><br><br>
                    </div>
                </div>
                <div class="mb-3">
                <label class="form-label" for="location">Location:</label><br>
                <input type="text" id="location" name="listing[location]" class="form-control" value="<%= listing.location %>" required><br><br>
                </div>
                <div class="mb-3 mt-3">
                <button type="submit" class="btn btn-dark edit-btn">Update Listing</button>
                </div>
            </form>
        </div>
    </div>

