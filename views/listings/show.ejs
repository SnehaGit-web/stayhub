<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-8 offset-2 mt-3">
        <h3><%= listing.title %></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.title %>" style="height: 20rem;">
            <div class="card-body">
                <p class="card-text">
                    <%= listing.title %><br>
                    <%= listing.description %><br>
                    Price: $<%= listing.price.toLocaleString("en-US") %> / night<br>
                    Location: <%= listing.location %><br>
                    Country: <%= listing.country %><br>
                </p>
            </div>
    </div>
    <div class="btns mb-3">
        <a class="btn btn-dark col-1 offset-3 edit-btn" href="/listings/<%= listing._id %>/edit">Edit</a>
        <form id="delete-form" method="POST" action="/listings/<%= listing._id %>?_method=DELETE" >
                <button class="btn btn-dark offset-5" onclick="if(confirm('Are you sure you want to delete this listing?')) { document.getElementById('delete-form').submit(); }">Delete</button>
        </form>
    </div>
    <hr />
    <div class="review-section col-8 offset-2 mb-5">
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="reviewer" class="form-label">Your Name</label>
                <input type="text" class="form-control" id="reviewer" name="review[author]">
            </div>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" class="form-range" min="1" max="5" name="review[rating]" id="ratingRange" oninput="document.getElementById('ratingOutput').value = this.value">
                <output id="ratingOutput">3</output>
            </div>
            <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea class="form-control" id="comment" name="review[comment]" rows="3"></textarea>
            </div>
            <div class="invalid-feedback">Please add some comments for review</div>
            <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
    </div>
    <hr />
    <div class="reviews-list col-8 offset-2 mb-5">
        <p><b>All Reviews</b></p>
        <% if (listing.reviews.length === 0) { %>
            <p>No reviews yet. Be the first to review!</p>
        <% } else { %>
            <div class="row">
            <% listing.reviews.forEach(function(review) { %>
                <div class="card col-5 ms-3 mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><%= review.author %></h5>
                        <h6 class="card-subtitle mb-2 text-muted">Rating: <%= review.rating %> stars</h6>
                        <p class="card-text"><%= review.comment %></p>
                        <form class="mb-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } %></div>
    </div>
</div>