<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-8 offset-2 mt-3">
        <h3>Listing Details</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.title %>" style="height: 20rem;">
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b><br>
                    <%= listing.title %><br>
                    <%= listing.description %><br>
                    Price: $<%= listing.price.toLocaleString("en-US") %> / night<br>
                    Location: <%= listing.location %><br>
                    Country: <%= listing.country %><br>
                </p>
            </div>
    </div>
    <div class="btns mb-3">
        <a class="btn btn-dark col-1 offset-3 edit-btn" href="/listings/<%= listing._id %>/edit">Edit</a>
        <form id="delete-form" method="POST" action="/listings/<%= listing._id %>?_method=DELETE" >
                <button class="btn btn-dark offset-5" onclick="if(confirm('Are you sure you want to delete this listing?')) { document.getElementById('delete-form').submit(); }">Delete</button>
        </form>
    </div>
    
</div>


